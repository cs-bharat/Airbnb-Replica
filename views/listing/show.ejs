<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3><b><%=Onelisting.title%></b></h3>
            </div>

            <div class="card col-8 offset-2 show-card listing-card">
                <img src="<%= Onelisting.image %>" class="card-img-top show-img" alt="show-image">
                <div class="card-body mt-3">
                    <p class="card-text card-description">
                       
                        <%=Onelisting.description%><br>
                            &#8377; <%=Onelisting.price.toLocaleString("en-IN")%><br>
                                <%=Onelisting.location %><br>
                                    <%=Onelisting.country %>
                    </p>
                </div>
            </div>

            <div class="show-btn mb-3">
                <a href="/listings/<%= Onelisting._id %>/edit" class="btn btn-warning col-md-2 offset-2">Edit
                    listing</a>
                <br />
                <form method="POST" action="/listings/<%= Onelisting._id %>?_method=DELETE">
                    <button class=" btn btn-danger offset-4 ">Delete</button>
                </form>
            </div>

            <!-- review form -->
             <div class="col-8 offset-2 mb-3">
                <hr>
                  <h4>Add a review</h4>
                  <form method="POST" action="/listings/<%= Onelisting.id %>/reviews"
                    novalidate class="needs-validation"> 
                    <!-- // bootstrap class used (validation) -->
                       <div class="mt-3">
                        <lable class="form-label" for="name">UserName</lable>
                        <input class="form-control"  type="text" max="20" id="userName" name="review[name]" required>
                        <div class="invalid-feedback">Name here.ðŸ˜‘</div>
                       </div>
                       <div class=" mt-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" min="1" max="5" id="rating" name="review[rating]" >
                       </div>
                       <div class="mt-3">
                        <label for="comment" class="form-label">Comment</label>
                        <textarea name="review[comment]" id="comment" cols="30" rows="5"
                        class="form-control" required></textarea>
                        <!-- client side validation -->
                        <div class="invalid-feedback">comment here.ðŸ˜‘</div>
                        <div>please add some comments for review.ðŸ¤—</div>
                       </div>
                       <button class="btn btn-outline-dark mt-3">Submit</button>
                  </form>
                   <hr>

                   <!-- show reviews. -->
                    <h4>All Reviews</h4>
                    <div class="row">
                        <% for(review of Onelisting.reviews) { %>
                        <div class="card col-5 ms-3 mb-3">
                            <div class="card-body">
                                <h5 class="card-title"><%= review.name %></h5>
                                <p class="card-text"><%= review.comment %></p>
                                <p class="card-text"><%= review.rating %> Stars</p>
                            </div>
                            <form  method="POST" 
                                  action="/listings/<%= Onelisting._id %>/reviews/<%= review._id %>>?_method=DELETE"  
                                   class="mb-3">
                                <button class="btn btn-sm btn-dark mt-2">
                                    Delete
                                </button>
                            </form>
                        </div>
                        <% } %>
                    </div>
             </div>

